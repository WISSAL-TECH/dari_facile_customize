<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_invoice_sent']" position="before">
                    <button string="Calculer l'échénaces" class="oe_highlight" type="object" name="compute_payment_dates"
                            invisible='reglement != "facilite"'/>
                    <button string="Appliquer la marge de convention" class="oe_highlight" type="object"
                            name="apply_discount_on_total_amount"  invisible='reglement != "convention"'/>
                </xpath>
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="reglement"/>
                    <field name="recurring_period"/>
                </xpath>
                <xpath expr="//page[@name='invoice_tab']" position="inside">
                    <field name="payment_dates" widget="one2many_list">
                        <tree editable="bottom">
                            <field name="payment_date"/>
                            <field name="amount"/>
                            <field name="statut"/>
                        </tree>
                    </field>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="attributes">
                    <attribute name="optional">show</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
