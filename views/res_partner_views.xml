<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.view.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//widget[@name='web_ribbon']" position="after">
                    <widget name="web_ribbon" title="Black listÃ©" bg_color="text-bg-dark" invisible="not black_list"/>

                </xpath>
                <xpath expr="//field[@id='individual']" position="replace">
                    <div style="display: flex; align-items: center;">
                        <div style="flex: 1; padding-right: 10px;">
                            <field id="individual" options="{'line_breaks': False}" widget="text" class="text-break"
                                   name="nom" default_focus="1" invisible="is_company" placeholder="Nom"
                                   required="type == 'contact'"/>
                        </div>
                        <div style="flex: 1; padding-left: 10px;">
                            <field id="surname" options="{'line_breaks': False}" widget="text" class="text-break"
                                   name="prenom" default_focus="1" invisible="is_company" placeholder="PrÃ©nom"
                                   required="type == 'contact'"/>
                        </div>
                    </div>

                </xpath>

                <xpath expr="//sheet/group/group[1]" position="inside">

                    <field name="ccp"/>
                    <field name="num_card"/>
                    <field name="start_date"/>
                    <field name="black_list"/>
                    <field name="created_in"/>
                </xpath>
                <xpath expr="//sheet/group/group[1]" position="after">
                    <group>

                        <field name="arabic_name"/>
                        <field name="arabic_job"/>
                        <field name="arabic_birthdate"/>
                        <field name="street_arabic"/>
                        <field name="wilaya_arabic"/>
                        <field name="commune_arabic"/>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
