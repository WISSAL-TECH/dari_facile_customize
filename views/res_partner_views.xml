            <field name="arch" type="xml">
                <xpath expr="//widget[@name='web_ribbon']" position="after">
                    <widget name="web_ribbon" title="Black listÃ©" bg_color="text-bg-dark" invisible="not black_list"/>

                </xpath>
                <xpath expr="//div//field[@name='parent_id']" position="after">
                    <field name="surname" placeholder="PrÃ©nom" invisible="is_company"/>
                </xpath>


                <xpath expr="//sheet/group/group[1]" position="inside">

